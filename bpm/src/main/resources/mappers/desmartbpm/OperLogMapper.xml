	<sql id="base_column">
		ID,
		USER_ID,
		USER_NAME,
		HOST,
		LOG_TYPE,
		REQUEST_PARAM,
		RESPONSE_PARAM,
		METHOD_DESCRIPTION,
		PATH,
		CREATE_TIME,
		ATTACH
	</sql>
	<sql id="relation_column">
		ol.ID,
		ol.USER_ID,
		ol.USER_NAME,
		ol.HOST,
		ol.LOG_TYPE,
		ol.REQUEST_PARAM,
		ol.RESPONSE_PARAM,
		ol.METHOD_DESCRIPTION,
		ol.PATH,
		ol.CREATE_TIME,
		ol.ATTACH
	</sql>

	<insert id="save" parameterType="com.desmart.desmartbpm.entity.DhOperLog">
		insert into DH_OPERLOG (
		<include refid="base_column" />
		) values (
			#{id},#{userId},#{userName},#{host},#{logType},
			#{requestParam},#{responseParam},#{methodDescription},
			#{path},sysdate,#{attach}
		)
	</insert>
	
	<select id="getOperaLogListByCondition" resultType="com.desmart.desmartbpm.entity.DhOperLog"
			parameterType="com.desmart.desmartbpm.entity.DhOperLog">
		select <include refid="base_column" />
		from DH_OPERLOG 1 = 1
		<where>
		<if test=" userId != null and userId !='' ">
			and userId = #{userId}
		</if>
		<if test=" logType !=null and logType !='' ">
			and logType = #{logType}
		</if>
		<if test=" startTime != null and startTime != '' and endTime != null and endTime !='' ">
			AND create_time &gt;=
				to_date(concat(#{startTime},'
				00:00:00'),'yyyy-mm-dd hh24:mi:ss')
				AND create_time &lt;=
				to_date(concat(#{endTime},'
				23:59:59'),'yyyy-mm-dd hh24:mi:ss')
		</if>
		</where>
	</select>


</mapper>